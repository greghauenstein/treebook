<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
	  <div class="navbar-inner">
	  <div class="container">
	    <%= link_to "Treebook", feed_path, class: "brand" %>
	    <!--<ul class="nav">
	    </ul>-->
	    <ul class="nav pull-right">
	    	<% if user_signed_in? %>
		    	<li class="dropdown">
		    		<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> Hey, <%= current_user.first_name %><b class="caret"></b></a>
		    		<ul class="dropdown-menu">
		    			<li><%= link_to edit_user_path do %>
		    					<i class="icon-edit"></i> Edit your profile
		    				<% end %>
		    			</li>
		    			<li><%= link_to logout_path, method: :delete do %>
		    					<i class="icon-signout"></i> Log out
		    				<% end %>
		    			</li>
		    		</ul>
		    	</li>
		    <% else %>
		    	<li class="dropdown">
		    		<a href="#" class="dropdown-toggle" data-toggle="dropdown">Want in?<b class="caret"></b></a>
		    		<ul class="dropdown-menu">
				    	<li><%= link_to login_path do %>
				    			<i class="icon-signin"></i> Log in
				    		<% end %>
				    	</li>
				    	<li><%= link_to register_path do %>
				    			<i class="icon-thumbs-up"></i> Join Treebook
				    		<% end %>
				    	</li>
				    </ul>
				   </li>
	    	<% end %>
	    </ul>
	  </div>
	  </div>
	</div>
	
	<div class="container">
		<div class="row">
			<div class="span10 offset1">
				<% flash.each do |type, message| %>
					<div class="alert <%= flash_class type %>">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<%= message %>
					</div>
				<% end %>
					          
				<%= yield %>
			</div>
		</div>
	</div>
	
	<%= javascript_include_tag "application" %>
</body>
</html>


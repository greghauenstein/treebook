<div class="page-header">
	<h2>Join Treebook</h2>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.input :first_name %></div>

  <div><%= f.input :last_name %></div>

  <div><%= f.input :profile_name %></div>

  <div><%= f.input :email, placeholder: 'user@domain.com' %></div>

  <div><%= f.input :password %></div>

  <!--<div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>-->

  <div class="form-actions"><%= f.button :submit, "Join!", class: 'btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>

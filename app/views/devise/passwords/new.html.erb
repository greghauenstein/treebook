<div class="page-header">
	<h2>Forgot your password?</h2>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: "form-horizontal", :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.input :email, :autofocus => true %></div>

  <div class="form-actions"><%= f.button :submit, "Send me reset password instructions", class: 'btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>

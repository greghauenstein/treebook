<div class="page-header">
	<h2>Change your password</h2>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: "form-horizontal", :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.input :password, "New password" %></div>

  <div><%= f.input :password_confirmation, "Confirm new password" %></div>

  <div class="form-actions"><%= f.button :submit, "Change my password" %></div>
<% end %>

<%= render "devise/shared/links" %>
